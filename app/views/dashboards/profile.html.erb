<div class="pt-5 mt-5 mycontainer">
  <div class="d-flex">
    <div class="card celebrity-photo-show sidebar col-3" style="width: 35rem;">
      <div class="card-body">
        <h5><%= current_user.first_name.capitalize  %> <%= current_user.last_name.capitalize  %></h5>
      </div>
      <div >
        <a href="#" class="card-link"><%= link_to "New Celebrity", new_celebrity_path, class:'button' %></a>
      </div>
      <div >
        <a href="#" class="card-link"><%= link_to "Reservations", new_celebrity_path, class:'button'  %></a>
      </div>
      <div >
        <a href="#" class="card-link"><%= link_to "My celebrities", new_celebrity_path, class:'button'  %></a>
      </div>
      <div >
        <a href="#" class="card-link"><%= link_to "Find you celebrity now", celebrities_path, class:'button' %></a>
      </div>
    </div>


    <div class="col-9">
      <div class="dashboard-content">
        <h1>Your Reservations:</h1>
        <% if current_user.reservations.empty? %>
        <p> <%= "You do not have any reservation yet..." %></p>
        <% else %>
        <div class="cards">
          <% current_user.reservations.each do |reservation| %>
          <div class="card-container">
            <div class="card-body">
              <div class="card-celebrity-body">
                <div>
                  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://okdiario.com/img/2017/12/28/quien-fue-elvis-presley-el-rey-del-rock-and-roll-2-655x368.jpg)">
                  </div>
                  <p class="text-center logo-font my-1"><strong> <%= reservation.celebrity.first_name %> <%= reservation.celebrity.last_name %></strong></p>
                  <p class="text-center logo-font my-1"><strong>From:</strong>  <%= reservation.reserve_begin%></p>
                  <p class="text-center logo-font my-1"><strong> To: </strong> <%= reservation.reserve_end%></p>
                  <p class="text-center logo-font my-1"> <strong>Status: </strong><%= reservation.status.capitalize %></p>
                  <!-- <p class="text-center my-1"><%#= link_to "Update Reservation", edit_reservation_path(reservation) %></p> -->
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
        <% end %>

        <div>
          <% if current_user.celebrities.blank?  %>
          <p class="text-center mb-5" id="logo-font">Hello <%= current_user.first_name.capitalize %>! You do not have any celebrity yet...</p>
          <p></p>
          <%= link_to "Create celebrity", new_celebrity_path, class:'button' %>
          <%  else %>
          <h1 class="text-center mb-5" id="logo-font">Hello <%= current_user.first_name.capitalize %>! These are your celebrities</h1>
          <div class="cards">

            <% current_user.celebrities.each do |celebrity| %>
            <%= link_to celebrity_path(celebrity.id), class: "no-deco" do %>
            <div class="celebrity-conteiner">
              <div class="card-celebrity-body">
                <div>
                  <div class="card-celebrity" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= celebrity.photo_url %>)"></div>
                  <p class="text-center logo-font my-1 no-deco"><%= "#{celebrity.first_name} #{celebrity.last_name}" %></p>
                  <p class="text-center my-1 no-deco">150â‚¬/hour</p>
                  <ul class="stars">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                  </ul>
                </div>
              </div>
            </div>
            <% end %>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>




