<div class="celebrity-photo d-flex">
  <div class="card celebrity-photo-show" style="width: 18rem;">
    <img class="card-img-top" src="/./images/logo.png" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= current_user.first_name.capitalize  %> <%= current_user.last_name.capitalize  %></h5>
    </div>
    <div class="card-body">
      <a href="#" class="card-link"><%= link_to "New Celebrity", new_celebrity_path %></a>
    </div>
    <div class="card-body">
      <a href="#" class="card-link"><%= link_to "Reservations", new_celebrity_path %></a>
    </div>
    <div class="card-body">
      <a href="#" class="card-link"><%= link_to "My celebrities", new_celebrity_path %></a>
    </div>
  </div>
  <div class="celebrity-description">
    <h1>Your Reservations:</h1>
      <% if current_user.celebrities  %>
        <% current_user.reservations.each do |reservation| %>
          <div class="celebrity-description">
            <h2><%= reservation.celebrity.first_name %> <%= reservation.celebrity.last_name %></h2>
            <p>From: <%= reservation.reserve_begin%></p>
            <p>To: <%= reservation.reserve_end%></p>
            <strong>Status:</strong>
            <p><%= reservation.status %></p>
          </div>
          <%= link_to "Update Reservation", edit_celebrity_reservation_path(reservation.celebrity, reservation) %>
          <br>
          <br>
        <% end %>
      <% else  %>
        <% current_user.reservations.each do |reservation| %>
          <div class="celebrity-description">
            <h2><%= reservation.celebrity.first_name %> <%= reservation.celebrity.last_name %></h2>
            <p>From: <%= reservation.reserve_begin%></p>
            <p>To: <%= reservation.reserve_end%></p>
            <p><strong>Status:</strong><%= reservation.status %></p>
          </div>
        <% end %>
      <% end %>
    </div>
</div>


