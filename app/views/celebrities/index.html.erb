<div class="mt-5 pt-3">
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<div class="input-group rounded container col-6 mt-3">
  <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
    aria-describedby="search-addon" />
  <span class="input-group-text border-0" id="search-addon">
    <i class="fas fa-search"></i>
  </span>
</div>

<%= form_tag celebrities_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Search"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>


<div class="col-8 pt-5 mt-5 container">
  <h1 class="text-center mb-5" id="logo-font">Choose your favourite celebrity</h1>
  <div class="cards">
    <% @celebrities.each do |celebrity| %>
    <%= link_to celebrity_path(celebrity.id), class: "no-deco" do %>
    <div class="celebrity-conteiner">
      <div class="card-celebrity-body">
        <div>
          <div class="card-celebrity" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url( <%= celebrity.photo_url %>)"></div>
          <p class="text-center logo-font my-1 no-deco"><%= "#{celebrity.first_name} #{celebrity.last_name}" %></p>
          <p class="text-center my-1 no-deco">150â‚¬/hour</p>
          <ul class="stars">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
          </ul>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
